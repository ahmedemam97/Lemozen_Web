@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<div class="card mt-3 text-end">
    <h5 class="card-header">  السائق  </h5>
    <input class="d-none" value="0" type="number" hidden name="Id" id="Id">

    <div class="card-body">

        <div class="d-flex justify-content-center align-items-start flex-wrap">

            <div class="col-12 col-md-3 p-2">
                <label for="Name"> الاسم</label>
                <input id="Name" class="form-control shadow-none text-center mt-2" type="text">
            </div>

            <div class="col-12 col-md-3 p-2">
                <label for="PhoneNumber"> الهاتف</label>
                <input id="PhoneNumber" class="form-control shadow-none text-center mt-2" type="text">
            </div>

            <div class="col-12 col-md-3 p-2">
                <label for="CardNumber"> البطاقة </label>
                <input id="CardNumber" class="form-control shadow-none text-center mt-2" type="text">
            </div>

            <div class="col-12 col-md-3 p-2">
                <label for="Address"> العنوان</label>
                <input id="Address" class="form-control shadow-none text-center mt-2" type="text">
            </div>

            <div class="col-12 col-md-3 p-2">
                <label for="Notes"> ملحوظة</label>
                <input id="Notes" class="form-control shadow-none text-center mt-2" type="text">
            </div>



        </div>


    </div>

</div>




<div class="text-center mt-3">
    <button id="saveBtn" class="btn btn-primary px-4" type="submit">حفظ </button>
    <button id="deleteBtn" class="btn btn-danger px-4 Dnone" type="submit">حذف </button>
    <button id="cancleBtn" class="btn btn-secondary px-4 Dnone" type="submit">الغاء </button>
</div>

<div class="table-responsive mt-4">
    <table class="table table-striped table-hover table-light text-center" id="mainTable">
        <thead>
            <tr>
                <th class="col-2">#</th>
                <th class="col-2"> الاسم </th>
                <th class="col-2"> الهاتف </th>
                <th class="col-2"> البطاقة </th>
                <th class="col-2"> العنوان </th>
                <th class="col-2"> ملحوظة </th>
                <th class="col-2">-</th>
            </tr>
        </thead>
        <tbody class="text-center"></tbody>

    </table>
</div>




@section Scripts {
    <script src="~/js/Driver.js" asp-append-version="true"></script>
}