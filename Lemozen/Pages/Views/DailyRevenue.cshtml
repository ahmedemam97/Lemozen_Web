@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="card mt-3 text-end">
    <h5 class="card-header"> ايرادات يومية</h5>
    <input class="d-none" value="0" type="number" hidden name="Id" id="Id">
    <div class="card-body">

        <div class="d-flex justify-content-center align-items-end flex-wrap">

            <div class="col-12 col-md-3 my-3">
                <input type="date" class="form-control text-center" name="Date" id="Date">
            </div>

            <div class="col-12 my-4">

                <table class="table table-striped table-hover table-light">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th> اسم الشركة </th>
                            <th>مبلغ الايراد</th>
                        </tr>
                    </thead>
                    <tbody id="RevenueTable">
                        <tr rowIndex="1">
                            <td>
                                <div>
                                    <button id="AddRowRevenue1" rowIndex="1" class="btn btn-success fs-5 py-1 px-3 mx-2 AddRowRevenue">+</button>
                                    <button id="RemoveRowRevenue1" rowIndex="1" class="btn btn-danger fs-5 py-1 px-3 mx-2 RemoveRowRevenue">-</button>
                                </div>
                            </td>
                            <td>
                                <select name="Revenue1" rowIndex="1" id="Revenue1" class="form-select RevenueSelect text-center">
                                    <option value="0"> --  اختر الشركة --</option>
                                </select>
                            </td>
                            <td>
                                <input rowIndex="1" id="AmountRevenue1" type="number" class="form-control text-center AmountRevenue">
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="1">
                            </td>
                            <td>
                                اجمالي ايراد الشركات
                            </td>
                            <td>
                                <input class="form-control text-center bg-transparent border-0" disabled type="number" name="TotalRevenue" id="TotalRevenue">
                            </td>
                        </tr>
                    </tfoot>
                </table>


            </div>

            <div class="col-12 my-3">

                <table class="table table-striped table-hover table-light">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th> اسم التطبيق</th>
                            <th>مبلغ الايراد </th>
                        </tr>
                    </thead>
                    <tbody id="RevenueAppTable">
                        <tr rowAppIndex="1">
                            <td>
                                <div>
                                    <button id="AddRowRevenueApp1" rowAppIndex="1" class="btn btn-success fs-5 py-1 px-3 mx-2 AddRowRevenueApp">+</button>
                                    <button id="RemoveRowRevenueApp1" rowAppIndex="1" class="btn btn-danger fs-5 py-1 px-3 mx-2 RemoveRowRevenueApp">-</button>
                                </div>
                            </td>
                            <td>
                                <select name="RevenueApp" rowAppIndex="1" id="RevenueApp1" class="form-select RevenueAppSelect text-center">
                                    <option value="0"> --  اختر التطبيق --</option>
                                </select>
                            </td>
                            <td>
                                <input rowAppIndex="1" id="AmountRevenueApp1" type="number" class="form-control text-center AmountRevenueApp">
                            </td>
                        </tr>
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="1">
                            </td>
                            <td>
                                اجمالي   ايراد التطبيق
                            </td>
                            <td>
                                <input class="form-control text-center bg-transparent border-0" disabled type="number" name="TotalRevenueApp" id="TotalRevenueApp">
                            </td>
                        </tr>
                    </tfoot>
                </table>


            </div>


            <div class="col-12 my-3 text-center">
                <label for="Total" class="my-2 fs-4 fw-bold">اجمالي  الايرادات</label>
                <input class="form-control bg-transparent text-center" value="0" disabled type="number" name="Total" id="Total">
            </div>

        </div>

        <div class="text-center mt-3">
            <button id="saveBtn" class="btn btn-primary px-4" type="submit">حفظ </button>
            <button id="deleteBtn" class="btn btn-danger px-4 Dnone" type="submit">حذف </button>
            <button id="cancleBtn" class="btn btn-secondary px-4 Dnone" type="submit">الغاء </button>
        </div>

    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover table-light text-center" id="mainTable">
        <thead>
            <tr>
                <th class="col-2">#</th>
                <th class="col-2"> التاريخ </th>
                <th class="col-2"> اجمالي ايراد اليومي </th>
                <th class="col-2">-</th>
            </tr>
        </thead>
        <tbody class="text-center"></tbody>

    </table>
</div>



@section Scripts {
    <script src="~/js/DailyRevenue.js" asp-append-version="true"></script>
}
